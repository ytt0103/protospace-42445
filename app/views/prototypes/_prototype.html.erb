<div class="card">
  <%= link_to prototype_path(prototype) do %>
    <%= image_tag prototype.image %>
  <% end %>
  <div class="card__body">
    <%= link_to prototype_path(prototype) do %>
      <p class="card__title">
        <%= prototype.title %>
      </p>
    <% end %>
    <p class="card__summary">
      <%= prototype.catch_copy %>
    </p>
    <%= link_to prototype.user.username, user_path(prototype.user), class: :card__user %>
  </div>
</div>