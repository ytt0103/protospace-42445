<h2>新規登録</h2>

<%= form_with model: resource, url: user_registration_path, local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div>
    <%= f.label :username, "ユーザー名" %><br />
    <%= f.text_field :username, autocomplete: "username" %>
  </div>

  <div>
    <%= f.label :profile, "プロフィール" %><br />
    <%= f.text_area :profile %>
  </div>

  <div>
    <%= f.label :occupation, "所属" %><br />
    <%= f.text_field :occupation %>
  </div>

  <div>
    <%= f.label :position, "役職" %><br />
    <%= f.text_field :position %>
  </div>

  <div>
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div>
    <%= f.label :password, "パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div>
    <%= f.label :password_confirmation, "パスワード確認" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div>
    <%= f.submit "登録" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>